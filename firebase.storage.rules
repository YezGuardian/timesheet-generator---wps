rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Existing path for backward compatibility
    match /timesheets/{candidateId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Company-based folder structure
    match /companies/{companyName}/{candidateId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Additional rules for better organization
    match /companies/{companyName}/{
      allow read, write: if request.auth != null;
    }
  }
}